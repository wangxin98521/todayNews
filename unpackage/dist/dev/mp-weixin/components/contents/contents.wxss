#content {
  width: 95%;
  padding: 8px 8px;
  margin: 10px auto 0 auto;
  background-color: #fff;
}
#content .content_title {
  width: 100%;
  height: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
#content .content_title .title_text {
  font-size: 18px;
  letter-spacing: 1px;
  color: #444444;
}
#content .content_title .love {
  color: #E07A76;
  float: right;
  font-size: 20px;
  line-height: 25px;
}
#content .content_pic {
  width: 100%;
  height: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
#content .content_pic .content_pic_img {
  width: 140px;
  height: 80px;
  margin: 10px 0;
}
#content .content_pic_one {
  height: 95%;
  width: 38%;
  float: left;
  margin-right: 5px;
}
#content .content_pic_one .content_pic_img {
  width: 100%;
  max-width: 160px;
  height: 100%;
}
#content .content_pic_none {
  width: 100%;
  height: auto;
  margin: 10px 0;
}
#content .content_pic_none .none_tenxt {
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
#content .content_buttom {
  height: auto;
  width: 100%;
}
#content .content_buttom .content_buttom_name {
  display: inline-block;
  font-size: 16px;
  letter-spacing: 1px;
  color: #E07A76;
  border: 2px solid;
  height: 26px;
  width: 90px;
  text-align: center;
  line-height: 22px;
  border-radius: 15px;
}
#content .content_buttom .content_buttom_see {
  float: right;
  font-size: 14px;
  color: #999999;
  letter-spacing: .6px;
  line-height: 25px;
}

